// Sensor API

Interface(
    name: "Sensor",
    ops: {
        "get": (
            args: {
                "id": (
                    type: "SensorId",
                    recv: From("u32", None),
                )
            },
            reply: Result(
                ok: "f32",
                err: CLike("SensorError"),
            ),
            idempotent: true,
        ),
        "get_reading": (
            args: {
                "id": (
                    type: "SensorId",
                    recv: From("u32", None),
                )
            },
            reply: Result(
                ok: "Reading",
                err: CLike("SensorError"),
            ),
            encoding: Hubpack,
            idempotent: true,
        ),
        "post": (
            args: {
                "id": (
                    type: "SensorId",
                    recv: From("u32", None),
                ),
                "value": "f32",
                "timestamp": "u64",
            },
            reply: Result(
                ok: "()",
                err: CLike("SensorError"),
            ),
            idempotent: true,
        ),
        "nodata": (
            args: {
                "id": (
                    type: "SensorId",
                    recv: From("u32", None),
                ),
                "nodata": (
                    type: "NoData",
                    recv: FromPrimitive("u8"),
                ),
                "timestamp": "u64",
            },
            reply: Result(
                ok: "()",
                err: CLike("SensorError"),
            ),
            idempotent: true,
        ),
        "get_nerrors": (
            args: {
                "id": (
                    type: "SensorId",
                    recv: From("u32", None),
                )
            },
            reply: Result(
                ok: "u32",
                err: CLike("SensorError"),
            ),
        ),
    },
)
